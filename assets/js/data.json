// DATOS INTEGRADOS (Para evitar error 404)
const MOCK_DATA = [
    { id: 1, name: "Dr. Mario Cimango", spec: "Cardiología", city: "Santiago", sector: "Providencia", date: "15 Feb", img: "https://i.pravatar.cc/150?u=dr1", price: 45000 },
    { id: 2, name: "Dr. Javier Soto", spec: "Podología", city: "Valdivia", sector: "Centro", date: "16 Feb", img: "https://i.pravatar.cc/150?u=dr2", price: 35000 },
    { id: 3, name: "Dra. Ana Valenzuela", spec: "Pediatría", city: "Concepción", sector: "Lomas", date: "17 Feb", img: "https://i.pravatar.cc/150?u=dra3", price: 40000 },
    { id: 4, name: "Dr. Roberto Paz", spec: "Dermatología", city: "Viña del Mar", sector: "Reñaca", date: "15 Feb", img: "https://i.pravatar.cc/150?u=dr4", price: 50000 }
];

function render(list) {
    const container = document.getElementById('results-container');
    if (list.length === 0) {
        container.innerHTML = `<p class="col-span-full text-center text-slate-400 py-10">No se encontraron especialistas</p>`;
        return;
    }

    container.innerHTML = list.map(doc => `
        <div class="bg-white rounded-[2.5rem] p-8 border border-slate-100 shadow-sm card-shadow relative overflow-hidden group">
            <div class="flex items-center gap-5 mb-8">
                <div class="relative">
                    <img src="${doc.img}" class="w-20 h-20 rounded-2xl object-cover shadow-md border-4 border-white">
                    <div class="absolute -bottom-1 -right-1 bg-emerald-500 w-5 h-5 rounded-full border-2 border-white flex items-center justify-center">
                        <i class="fa-solid fa-check text-[8px] text-white"></i>
                    </div>
                </div>
                <div>
                    <span class="bg-indigo-50 text-indigo-600 text-[10px] font-black uppercase px-2 py-1 rounded-md tracking-widest">${doc.spec}</span>
                    <h4 class="text-xl font-extrabold text-slate-800 mt-1">${doc.name}</h4>
                    <div class="flex text-amber-400 text-[10px] mt-1">
                        <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
                    </div>
                </div>
            </div>

            <div class="space-y-3 mb-8 text-sm font-medium text-slate-500">
                <p><i class="fa-solid fa-location-dot mr-3 text-rose-500"></i>${doc.city}, ${doc.sector}</p>
                <p><i class="fa-solid fa-calendar mr-3 text-emerald-500"></i>Disponible: ${doc.date}</p>
            </div>

            <button class="w-full bg-emerald-500 hover:bg-emerald-600 text-white py-4 rounded-2xl font-black transition-all shadow-lg shadow-emerald-100 uppercase tracking-wide">
                AGENDAR CITA
            </button>
        </div>
    `).join('');
}

// Búsqueda en tiempo real + Botón
const inpS = document.getElementById('search-spec');
const inpL = document.getElementById('search-loc');
const btnS = document.getElementById('btn-search');

const handleSearch = () => {
    const s = inpS.value.toLowerCase();
    const l = inpL.value.toLowerCase();
    const filtered = MOCK_DATA.filter(d => 
        d.spec.toLowerCase().includes(s) && d.city.toLowerCase().includes(l)
    );
    render(filtered);
};

inpS.addEventListener('input', handleSearch);
inpL.addEventListener('input', handleSearch);
btnS.addEventListener('click', handleSearch);

// Calendario
flatpickr("#search-date", { minDate: "today", onChange: handleSearch });

// Carga inicial
window.onload = () => render(MOCK_DATA);
